<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Patches applicable to both Medieval Overhaul and VCE -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medieval Overhaul</li>
			<li>Vanilla Cooking Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- Remove Mousekin wheat plant, wheat grain and flour -->
				
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[
						defName="Mousekin_Plant_Wheat" or
						defName="Mousekin_RawWheat" or
						defName="Mousekin_Flour"
					]</xpath>
				</li>
				
				<!-- Remove manual flour grinding recipe -->
				
				<li Class="PatchOperationRemove">
					<xpath>Defs/RecipeDef[defName="Mousekin_Make_FlourFromWheat"]</xpath>
				</li>
				
				<!-- Remove the flour grinding spot since the only recipe is also removed -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="MouseKin_FlourGrindingSpot"]</xpath>
				</li>
				
				<!-- Likewise remove the workgiver info -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/WorkGiverDef[defName="DoBillsCook"]/fixedBillGiverDefs/li[text()="MouseKin_FlourGrindingSpot"]</xpath>
				</li>
			
			</operations>
		</match>
	</Operation>
</Patch>