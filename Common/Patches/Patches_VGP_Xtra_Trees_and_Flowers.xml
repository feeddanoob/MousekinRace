<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Xtra Trees and Flowers</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Allow selected flowers to be recognized by Mousekin beehives for honey and beeswax production,
					 and for the Flowers: desired precept -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/MousekinRace.FlowerListDef[defName="Mousekin_ValidFlowers"]/flowerPlants</xpath>
					<value>
						<li>PlantAlliumGiganteum</li>
						<li>PlantAlliumGiganteumDECO</li>
						<li>PlantAnthurium</li>
						<li>PlantAnthuriumDECO</li>
						<li>PlantPinkRimstalk</li>
						<li>PlantPinkRimstalkDECO</li>
						<li>PlantPlumeria</li>
						<li>PlantPlumeriaDECO</li>
						<li>PlantSunflower</li>
						<li>Plant_AssortedFlower</li>
						<li>Plant_AssortedFlowerDECo</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>