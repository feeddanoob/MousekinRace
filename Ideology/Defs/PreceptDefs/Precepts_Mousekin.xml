<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<PreceptDef>
		<defName>Mousekin_Precept_FlowersDesired</defName>
		<issue>Mousekins_Issue_Flowers</issue>
		<label>desired</label>
		<description>We should live surrounded by flowers, to remind us of the fleeting beauty of life and nature.</description>
		<impact>Medium</impact>
		<displayOrderInIssue>0</displayOrderInIssue>
		<displayOrderInImpact>1000</displayOrderInImpact>
		<associatedMemes>
			<li>Mousekin_IdeoMeme_FloralReverence</li>
		</associatedMemes>
		<comps>
			<li Class="PreceptComp_SituationalThought">
				<thought>Humanlike_Thought_FlowersPlanted</thought>
				<thoughtStageDescriptions>
					<li>No flowers planted</li>
					<li>Few flowers planted</li>
					<li>Some flowers planted</li>
					<li>Many flowers planted</li>
					<li>Plethora of flowers planted</li>
				</thoughtStageDescriptions>
			</li>
			<li Class="PreceptComp_SituationalThought">
				<thought>Humanlike_Thought_FlowersDestroyed</thought>
				<thoughtStageDescriptions>
					<li>Few flowers destroyed</li>
					<li>Some flowers destroyed</li>
					<li>Many flowers destroyed</li>
					<li>Countless flowers destroyed</li>
				</thoughtStageDescriptions>
			</li>
			<li Class="PreceptComp_SituationalThought">
				<thought>Humanlike_Thought_GardensDesired</thought>
				<thoughtStageDescriptions>
					<li>No flower gardens</li>
					<li>Inadequate flower gardens</li>
				</thoughtStageDescriptions>
			</li>
		</comps>
	</PreceptDef>
	
	<PreceptDef>
		<defName>Mousekin_Precept_RitualHereticExecution</defName>
		<label>heretic execution</label>
		<tipLabelOverride>Public execution of heretics by burning</tipLabelOverride>
		<description>A public execution of Mousekin heretics and other non-Mousekin rodentkind prisoners. The organizer will give a speech to excite the crowd, then order up to three prisoners to be burned at the stake.</description>
		<impact>Medium</impact>
		<iconPath>UI/Icons/Rituals/BurningStake</iconPath>
		<issue>Ritual</issue>
		<preceptClass>Precept_Ritual</preceptClass>
		<ritualPatternBase>Mousekin_RitualPatternHereticExecution</ritualPatternBase>
		<allowDuplicates>false</allowDuplicates>
		<countsTowardsPreceptLimit>false</countsTowardsPreceptLimit>
		<selectionWeight>0.0</selectionWeight> <!-- never randomly available -->
		<canGenerateAsSpecialPrecept>false</canGenerateAsSpecialPrecept>
		<displayOrderInImpact>100</displayOrderInImpact>
		<ignoreLimitsInEditMode>false</ignoreLimitsInEditMode>
		<usesIdeoVisualEffects>false</usesIdeoVisualEffects>
		<receivesExpectationsQualityOffset>true</receivesExpectationsQualityOffset>
		<ignoreNameUniqueness>true</ignoreNameUniqueness>
	</PreceptDef>
	
</Defs>